{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "esnext"
    ],
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "jest.config.js"
  ],
  "include": [
    "./src/**/*",
  ]
}
